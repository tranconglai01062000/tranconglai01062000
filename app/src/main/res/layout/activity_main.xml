<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:text="Karuida"
                android:textColor="#717486"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="KK-8827A"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:text="8-digit"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#78757D"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <TextView
                    android:id="@+id/textView_rs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/color_rs"
                    android:gravity="end"
                    android:paddingHorizontal="8dp"
                    android:text="0"
                    android:textSize="60sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="#5D4F4E"
            android:orientation="horizontal">
            <LinearLayout
                android:paddingHorizontal="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818d"
                    android:text="OFF"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818d"
                    android:text="%"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818d"
                    android:text="+/-"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818d"
                    android:text="♪"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#FDB352"
                    android:text="CE"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#FDB352"
                    android:text="on/c"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818D"
                    android:text="mrc"
                    android:textColor="@color/white" />
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818D"
                    android:text="√"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_7"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="7"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_4"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="4"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_1"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="1"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_0"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:paddingHorizontal="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818D"
                    android:text="M-"
                    android:textColor="@color/white" />
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818D"
                    android:text="MC"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_8"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="8"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_5"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="5"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_2"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="2"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_poin"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="."
                    android:textSize="30sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:paddingHorizontal="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818D"
                    android:text="M+"
                    android:textColor="@color/white" />
                <Button
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#89818D"
                    android:text="MR"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_9"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="9"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_6"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="6"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_3"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="3"
                    android:textSize="30sp"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn_equal"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:text="="
                    android:textSize="30sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:paddingHorizontal="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text=""
                    android:background="#5D4F4E"
                    />
                <Button
                    android:id="@+id/btn_div"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="1"
                    android:background="#89818D"
                    android:text="÷"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_mul"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:background="#89818D"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_min"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="2"
                    android:background="#89818D"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="8dp"
                    android:layout_weight="4"
                    android:background="#89818D"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>